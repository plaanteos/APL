{
  "name": "apl-backend-api",
  "version": "1.0.0",
  "description": "Backend API for APL Dental Laboratory Management System",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true});\" && tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:generate": "prisma generate",
    "db:push": "prisma db push --skip-generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx prisma/seed.ts",
    "db:evidence": "tsx src/scripts/db-evidence.ts",
    "create-admin": "tsx src/scripts/create-admin.ts",
    "db:init": "npm run db:push && npm run create-admin && npm run db:seed"
  },
  "keywords": [
    "dental",
    "laboratory",
    "management",
    "api",
    "nodejs"
  ],
  "author": "APL Development Team",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.67.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.12",
    "otplib": "^12.0.1",
    "typescript": "^5.3.3",
    "winston": "^3.19.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^25.0.8",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.5",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.1",
    "tsx": "^4.6.2",
    "vitest": "^2.1.9"
  }
}
