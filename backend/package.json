{
  "name": "apl-backend-api",
  "version": "1.0.0",
  "description": "Backend API for APL Dental Laboratory Management System",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx prisma/seed.ts",
    "create-admin": "tsx src/scripts/create-admin.ts"
  },
  "keywords": [
    "dental",
    "laboratory",
    "management",
    "api",
    "nodejs"
  ],
  "author": "APL Development Team",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@types/node": "^20.19.27",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "typescript": "^5.3.3",
    "winston": "^3.19.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node-cron": "^3.0.11",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.1",
    "tsx": "^4.6.2"
  }
}
